#version 400
layout(location = 0) in vec2 vertexPosition_screen;
layout(location = 1) in vec2 vertexUv;
out vec2 uv;
uniform int half_width;
uniform int half_height;
void main(){
	vec2 position=vertexPosition_screen-vec2(half_width,half_height);
	position /=vec2(half_width,half_height);
	gl_Position=vec4(position,0,1);

	uv=vertexUv;


}